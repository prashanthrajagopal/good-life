<ul>
	<% if flash[:error] %>
		<div class="error"><%= simple_format flash[:error] %></div>
	<% end %>
	<% if flash[:notice] %>
		<div class="notice"><%= flash[:notice] %></div>
	<% end %>
	<% if flash[:success] %>
		<div class="success"><%= flash[:success] %></div>
	<% end %>
	<% if flash[:warning] %>
		<div class="warning"><%= flash[:warning] %></div>
	<% end %>
</ul>